@model DangHoangQuanBTH2.Models.Person
@{
    string id = @Guid.NewGuid().ToString("N");
}
<form asp-action="Create" method="post" class="col-6">
    <input type="hidden" asp-for="PersonID" value=@id>
    <div class="mb-3">
        <label for="std-name" class="form-label">Person Name: </label>
        <input type="text" class="form-control" id="std-name" asp-for="PersonName">
  </div>
  <button type="submit" class="btn btn-succcess"> Submit</button>
</form>